{
  "source": ["specify://"],
  "parsers": [
    {
      "name": "sort-by",
      "options": {
        "keys": ["name"]
      }
    }
  ],
  "formats": [
    {
      "name": "scss/variables",
      "formatter": "scss/variables"
    },
    {
      "name": "scss/mixins",
      "formatter": "scss/mixins"
    }
  ],
  "destinations": [
    {
      "name": "GitHub",
      "mode": "pull-request",
      "repository": "@bitovidesign/designdemo",
      "branch": "main",
      "directory": "styles"
    }
  ],
  "rules": [
    {
      "name": "Colors",
      "path": "styles/colors.scss",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "types": ["color"]
          }
        }
      ],
      "format": "scss/variables"
    },
    {
      "name": "Typography",
      "path": "styles/typography.scss",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "types": ["textStyle"]
          }
        }
      ],
      "format": "scss/mixins"
    },
    {
      "name": "Font Files",
      "path": "fonts",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "types": ["font"]
          }
        },
        {
          "name": "to-font-file"
        }
      ]
    }
  ]
}
