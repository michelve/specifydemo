{
  "repository": "@bitovidesign/designdemo",
  "base": "main",
  "version": "2",
  "rules": [
    {
      "name": "SDTF",
      "parsers": [
        {
          "name": "to-sdtf",
          "output": {
            "type": "file",
            "filePath": "output/tokens.json"
          }
        }
      ]
    },
    {
      "name": "SCSS Variables",
      "parsers": [
        {
          "name": "to-scss",
          "options": {
            "formatter": "scss/variables"
          }
        }
      ],
      "output": {
        "type": "file",
        "filePath": "styles/variables.scss"
      }
    },
    {
      "name": "SCSS Mixins",
      "parsers": [
        {
          "name": "to-scss",
          "options": {
            "formatter": "scss/mixins"
          }
        }
      ],
      "output": {
        "type": "file",
        "filePath": "styles/mixins.scss"
      }
    }
  ]
}
