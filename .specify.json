{
  "repository": "@bitovidesign/designdemo",
  "head": "specify-json",
  "base": "main",
  "version": "2",
  "rules": [
    {
      "name": "SDTF",
      "parsers": [
        {
          "name": "to-sdtf",
          "output": {
            "type": "file",
            "filePath": "output/tokens.json"
          }
        }
      ]
    },
    {
      "name": "Colors",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "types": ["color"]
          }
        },
        {
          "name": "to-scss",
          "options": {
            "formatter": "scss/variables"
          }
        }
      ],
      "output": {
        "type": "file",
        "filePath": "styles/colors.scss"
      }
    },
    {
      "name": "Typography",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "types": ["textStyle"]
          }
        },
        {
          "name": "to-scss",
          "options": {
            "formatter": "scss/mixins"
          }
        }
      ],
      "output": {
        "type": "file",
        "filePath": "styles/typography.scss"
      }
    },
    {
      "name": "Font Files",
      "parsers": [
        {
          "name": "filter",
          "options": {
            "types": ["font"]
          }
        },
        {
          "name": "to-font-file"
        }
      ],
      "output": {
        "type": "directory",
        "directoryPath": "fonts"
      }
    }
  ]
}
